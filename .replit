modules = ["python-3.11", "nodejs-20"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "DefiBlockchain"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "HardhatNode"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "DirectServer"

[[workflows.workflow]]
name = "DefiBlockchain"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node defiprogess/blockchain-server.cjs"

[[workflows.workflow]]
name = "HardhatNode"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd defiprogess/contracts && npx hardhat node"
waitForPort = 8545

[[workflows.workflow]]
name = "DirectServer"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd defiprogess && node direct-server.cjs"
waitForPort = 5000

[deployment]
run = ["sh", "-c", "python clone_and_run.py"]

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8545
externalPort = 3000

[[ports]]
localPort = 24678
externalPort = 3001
